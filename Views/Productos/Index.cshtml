@model IEnumerable<PointOfSale.Models.Producto>

@{
    ViewData["Title"] = "Index";
}



<h2>Buscar Productos</h2>

<!-- Formulario para buscar por nombre de categoría, código de barras y otros criterios -->
<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchCategory">Categoría</label>
        <input type="text" class="form-control" id="BuscarCategoria" name="BuscarCategoria" value="@Context.Request.Query["BuscarCategoria"]" placeholder="Nombre de la Categoría" />
    </div>

    <div class="form-group">
        <label for="searchBarcode">Código de Barras</label>
        <input type="text" class="form-control" id="BuscarCodigoBarra" name="BuscarCodigoBarra" value="@Context.Request.Query["BuscarCodigoBarra"]" placeholder="Código de Barras" />
    </div>

    <div class="form-group">
        <label for="searchName">Nombre del Producto</label>
        <input type="text" class="form-control" id="BuscarNombre" name="BuscarNombre" value="@Context.Request.Query["BuscarNombre"]" placeholder="Nombre del Producto" />
    </div>

    <button type="submit" class="btn btn-primary">Buscar</button>
</form>


<h1>Lista de Productos</h1>

<p>
    <a asp-action="Create">Crear Nuevo Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoBarra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PesoNeto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoBarra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PesoNeto)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Costo)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
            </td>
            <td>
               @*  <a asp-action="Edit" asp-route-id="@item.ProductoId">Edit</a> | *@
                <a asp-action="Details" asp-route-id="@item.ProductoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
